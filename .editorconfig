# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有檔案的預設設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, Vue 檔案
[*.{js,ts,vue,json}]
indent_size = 2

# CSS, SCSS 檔案
[*.{css,scss}]
indent_size = 2

# Markdown 檔案
[*.md]
trim_trailing_whitespace = false

# YAML 檔案
[*.{yml,yaml}]
indent_size = 2

# Windows 批次檔保持 CRLF
[*.{bat,cmd}]
end_of_line = crlf 